
@{
    ViewData["Title"] = "Index";
}


<br />
<div class="backgroundwhite">
    <div class="row">
        <div class="col-6">
            <h2 class="text-info">User List</h2>
        </div>

        <div class="col-6 text-right">
            <a asp-action="Upsert" class="btn btn-info text-white"><i class="fas fa-plus"></i>&nbsp; Create Transaction</a>
        </div>
    </div>

    <br />
    <br />
    <table id="tblTransactions" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Date</th>
                <th>Name</th>
                <th>Income</th>
                <th>Expenses</th>
                <th data-orderable="false"></th>
            </tr>
        </thead>
        <tfoot>
            <tr>
                <th colspan="3" style="text-align:right">Current Page Total:</th>
                <th colspan="2"></th>
                
            </tr>
        </tfoot>
    </table>
</div>

@section Scripts{
    <script src="~/js/Transaction.js"></script>
}

